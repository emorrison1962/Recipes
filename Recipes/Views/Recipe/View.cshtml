@model Recipes.Models.RecipeVMBase

@{
    ViewBag.Title = "View";
}


<div class="row-fluid" ng-controller='recipeViewController' ng-init="init(@Newtonsoft.Json.JsonConvert.SerializeObject(Model))">
	<h2>{{recipe.Name}}</h2>
	<img src="{{recipe.ImageUri}}" style="max-width:400px; max-height:400px" />
	
	<div id="ingredients">
		<h4>Ingredients:</h4>
        <div ng-repeat="ingredientGroup in recipe.IngredientGroups">
            <strong>{{ingredientGroup.Text}}</strong>
            <ul >
                <li ng-repeat="ingredientItem in ingredientGroup.Items">{{ingredientItem.Text}}</li>
            </ul>
        </div>
	</div>

	<div id="procedures">
		<h4>Procedure:</h4>
		<div ng-repeat="procedureGroup in recipe.ProcedureGroups">
			<strong>{{procedureGroup.Text}}</strong>
			<ul>
				<li><label for="first_radio_btn">First</label> <input type="radio" id="first_radio_btn" name="choice" value="" /></li>
<li ng-repeat="procedureItem in procedureGroup.Items">{{procedureItem.Text}}</li>
			</ul>
		</div>
	</div>

	<p>
		@Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
		@Html.ActionLink("Back to List", "Index")
	</p>
</div>
<h4>{{msg}}</h4>

<script src="~/Scripts/Views/Recipe/View.js"></script>

@model IEnumerable<Recipes.Domain.ShoppingListGroup>

@{
    ViewBag.Title = "EditItems";
}

<div class="row-fluid" ng-controller='shoppingListEditItemsController' ng-init="init(@Newtonsoft.Json.JsonConvert.SerializeObject(Model))">
	<div class="col-md-offset-2 col-md-6">
		<div class="page-header">
			<h2>Shopping List Items</h2>
		</div>

		<div id="groups" class="module panel panel-default">
				<div ng-repeat="group in model">
					<label class="radio radio radio-inline" ng-style={{group.Style}} for="radioShoppingListGroup-{{group.ShoppingListGroupId}}">
						<input ng-model="group.IsChecked" ng-change="groupChecked(group)" id="radioShoppingListGroup-{{group.ShoppingListGroupId}}" type="radio" name="choice" value="" />{{group.Text}}&nbsp;
					</label>
				</div>
		</div>


		<div id="items" class="module panel panel-default">
			<div ng-repeat="group in model">
				<ul class="list-unstyled">
					<li ng-repeat="item in group.Items">
						<label class="checkbox checkbox-inline" for="cbShoppingListItem-{{item.ShoppingListItemId}}">
							<input ng-model="item.IsChecked" ng-change="itemChecked(item)" id="cbShoppingListItem-{{item.ShoppingListItemId}}" type="checkbox" name="choice" value="" />{{item.Text}}&nbsp;
							<a style="cursor: pointer">
								<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
							</a>
						</label>
					</li>
				</ul>
			</div>
		</div>

	</div>
</div>

<script src="~/Scripts/Views/ShoppingList/EditItems.js"></script>
